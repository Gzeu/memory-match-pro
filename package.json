{
  "name": "memory-match-pro",
  "version": "1.0.0",
  "description": "ðŸ§  Professional Memory Match game built with HTML5 Canvas, modern JavaScript ES6+, and advanced game architecture",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "webpack serve --mode development --open",
    "build": "npm run clean && webpack --mode production",
    "build:dev": "npm run clean && webpack --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.{js,css,html}",
    "clean": "rimraf dist",
    "serve": "http-server dist -p 3000 -o",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "deploy": "npm run build && gh-pages -d dist",
    "start": "npm run dev",
    "vercel-build": "npm run build"
  },
  "keywords": [
    "memory-game",
    "html5-game",
    "canvas",
    "javascript",
    "card-matching",
    "puzzle-game",
    "es6",
    "webpack",
    "vercel",
    "pwa"
  ],
  "author": "Gzeu",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-loader": "^10.0.0",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "html-webpack-plugin": "^5.6.4",
    "css-loader": "^7.1.2",
    "style-loader": "^4.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "terser-webpack-plugin": "^5.3.14",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "rimraf": "^6.0.1",
    "http-server": "^14.1.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "gh-pages": "^6.3.0"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/main.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gzeu/memory-match-pro.git"
  },
  "bugs": {
    "url": "https://github.com/Gzeu/memory-match-pro/issues"
  },
  "homepage": "https://memory-match-pro.vercel.app"
}